{
  "include": [
    "src/**/*.ts",
    "./*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "outDir": "./bin",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@services/*": [
        "src/app/core/services/*"
      ],
      "@models/*": [
        "src/app/core/models/*"
      ],
      "@interfaces/*": [
        "src/app/core/interfaces/*"
      ],
      "@enums/*": [
        "src/app/core/enums/*"
      ],
      "@shared/*": [
        "src/app/shared/*"
      ]
    }
  }
}